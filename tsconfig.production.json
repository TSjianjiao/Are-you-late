{
    "compilerOptions": {
      "outDir": "./lib",
      "target": "es6",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "experimentalDecorators": true,
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "noEmit": false,
      "esModuleInterop": true,
      "module": "CommonJS",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": false,
      "jsx": "preserve",
      "declaration": true,
      "rootDir": "./src",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
      }
    },
    "include": [
      "src"
    ]
  }
  